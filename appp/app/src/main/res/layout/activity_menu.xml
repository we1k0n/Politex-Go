<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/addreader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="AddReaders"
        android:text="Додати читача"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addbook"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/addbook"
        app:layout_constraintTop_toBottomOf="@+id/addbook"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addbook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="AddBook"
        android:text="Додати книгу"
        app:layout_constraintEnd_toEndOf="@+id/vorp"
        app:layout_constraintStart_toStartOf="@+id/vorp"
        app:layout_constraintTop_toBottomOf="@+id/vorp" />

    <Button
        android:id="@+id/vorp"
        android:layout_width="319dp"
        android:layout_height="47dp"
        android:layout_marginTop="252dp"
        android:onClick="vorp"
        android:text="Видати книгу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="318dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:onClick="history"
        android:text="Історія книг"
        app:layout_constraintEnd_toEndOf="@+id/addreader"
        app:layout_constraintStart_toStartOf="@+id/addreader"
        app:layout_constraintTop_toBottomOf="@+id/addreader" />

    <Button
        android:id="@+id/button3"
        android:layout_width="318dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:onClick="returnbook"
        android:text="Повернути книгу"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
</androidx.constraintlayout.widget.ConstraintLayout>